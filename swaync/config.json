{
 
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
	"layer": "overlay",
    "control-center-margin-top": 10,
    "control-center-margin-bottom": 10,
    "control-center-margin-right": 10,
    "control-center-margin-left": 10,
    "notification-icon-size": 64,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 10,
    "timeout-low": 2,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-center-width": 500,
    "control-center-height": 800,
    "notification-window-width": 440,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": true,
    "hide-on-action": true,
    "script-fail-notify": true,
	"scripts": {
		"message-sound": {
			"exec": "/home/wrq/sound/sound-message.sh",
			"app-name":"QQ|Google-chrome"
		},
		"complete-sound": {
			"exec": "/home/wrq/sound/sound-complete.sh",
			"app-name":"alixby3|com.xunlei.download|baidunetdisk"
		},
		"Low-sound": {
			"exec": "/home/wrq/sound/sound-normal.sh",
			"urgency": "Low"
		  },
		"Normal-sound": {
		  "exec": "/home/wrq/sound/sound-normal.sh",
		  "urgency": "Normal"
		},
		"Critical-sound": {
			"exec": "/home/wrq/sound/sound-critical.sh",
			"urgency": "Critical"
		  }
	},
    "widgets": [
        "title",
        "dnd",
        "mpris",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Notification Center",
            "clear-all-button": true,
            "button-text": "ó°†´ Clear All"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "max-lines": 1,
            "text": "Notification Center"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 7
        }
    }
}